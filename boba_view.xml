<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_Name"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/textView_Tea"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_toEndOf="@+id/textView_Name"
        android:layout_toRightOf="@+id/textView_Name"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/textView_Milk"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@+id/textView_Boba"
        android:layout_toRightOf="@+id/textView_Boba"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/textView_Boba"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/textView_Tea"
        android:layout_toRightOf="@+id/textView_Tea"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold"></TextView>
</RelativeLayout>