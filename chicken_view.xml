<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_Name"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/textView_Size"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/textView_Name"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/textView_Spice"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/textView_Size"
        android:layout_toRightOf="@+id/textView_Size"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/textView_Sauce"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_toEndOf="@+id/textView_Spice"
        android:layout_toRightOf="@+id/textView_Spice"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold"></TextView>
</RelativeLayout>